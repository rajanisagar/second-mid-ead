<div class="form-group">
    <label for="fName">Full Name</label>
    <input required type="text" name="fName" id="fName" class="form-control" value="<%=user.fName%>">
</div>

<div class="form-group">
    <label for="email">Email</label>
    <input required type="text" name="email" id="email" class="form-control" value="<%=user.email%>">
</div>

<div class="form-group">
    <label for="phone">Phone</label>
    <input required type="text" name="phone" id="phone" class="form-control" value="<%=user.phone%>">
</div>

<div class="form-group">
    <label for="country">Country</label>
    <input required type="text" name="country" id="country" class="form-control" value="<%=user.country%>">
</div>

<div class="form-group">
    <label for="city">City</label>
    <input required type="text" name="city" id="city" class="form-control" value="<%=user.city%>">
</div>

<a href="/" class="btn btn-secondary">Cancel</a>

<button type="submit" class="btn btn-primary">Save</button>



